                            @Html.EditorFor(model => model.ZonaDescoberto, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ZonaDescoberto, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn btn-outline-primary" />
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="col-md-2"></div>
    </div>
</div>


<div>
