@model TP_PW.Models.Artigo

@{
    ViewBag.Title = "Create";
}
<div class="container">

    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8 border border-white rounded" style="margin: 1rem; padding: 1rem;">
            <h2>Create</h2>

