@model IEnumerable<TP_PW.Models.Artigo>

@{
    ViewBag.Title = "Artigos";
}
<div class="container">
    <h2>Index</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>

<div class="container">
    <div class="row">

        <div class="col-md-12 border border-white rounded" style="margin: 1rem;">
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Descricao)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Tipo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Origem)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AnoDescoberto)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ZonaDescoberto)
                    </th>
                    <th>
                        <input type="button" class="btn btn-outline-secondary btn-sm" value="Adicionar Artigo" onclick="location.href = '@Url.Action("Create", "Artigos")'" />
                    </th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Descricao)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Tipo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Origem)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AnoDescoberto)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ZonaDescoberto)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>