@model TP_PW.Models.Artigo

@{
    ViewBag.Title = "Delete";
}


<div class="container">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6 border border-white rounded" style="margin: 1rem; padding-top: 1rem">
            <h2>Eliminar</h2>
            <hr />
            <h4>Tem a certeza que quer eliminar este Artigo?</h4>
            <hr />
            

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-group row">
                    <label for="Nome" class="col-md-6 col-form-label h3">@Html.DisplayNameFor(model => model.Nome) :</label>
                    <div class="col-md-6 h5">
                        @Html.DisplayFor(model => model.Nome, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <label for="Descricao" class="col-md-6 col-form-label h3">@Html.DisplayNameFor(model => model.Descricao) :</label>
                    <div class="col-md-6 h5">
                        @Html.DisplayFor(model => model.Descricao, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <label for="Tipo" class="col-md-6 col-form-label h3">@Html.DisplayNameFor(model => model.Tipo) :</label>
                    <div class="col-md-6 h5">
                        @Html.DisplayFor(model => model.Tipo, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <label for="Origem" class="col-md-6 col-form-label h3">@Html.DisplayNameFor(model => model.Origem) :</label>
                    <div class="col-md-6 h5">
                        @Html.DisplayFor(model => model.Origem, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <label for="AnoDescoberto" class="col-md-6 col-form-label h3">@Html.DisplayNameFor(model => model.AnoDescoberto) :</label>
                    <div class="col-md-6 h5">
                        @Html.DisplayFor(model => model.AnoDescoberto, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <label for="ZonaDescoberto" class="col-md-6 col-form-label h3">@Html.DisplayNameFor(model => model.ZonaDescoberto) :</label>
                    <div class="col-md-6 h5">
                        @Html.DisplayFor(model => model.ZonaDescoberto, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-10">
                        <button type="submit" class="btn btn-primary">Apagar</button>
                        <button type="button" class="btn btn-outline-danger" onclick="location.href='@Url.Action("Index", "Users")'">Cancelar</button>
                    </div>
                </div>
            }
        </div>
        <div class="col-md-3"></div>
    </div>
</div>


