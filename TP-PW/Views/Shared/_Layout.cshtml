<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewBag.Title - My ASP.NET Application</title>
        <link href="https://fonts.googleapis.com/css?family=Roboto:300,300i,400,400i,500,500i,700,700i" rel="stylesheet">
        @Styles.Render("~/Content/templateStyles")
    </head>
    <body style="background-color: #f3f3f3;">
        <div class="preloader">
            <span class="preloader-spin"></span>
        </div>
        <div class="site">
            <header style="padding: 10px">
                <div class="container">
                    <div class="row" style="margin-top: 5px">
                        <div class="col-md-2 col-sm-2 logo-column">
                            <a href="/" class="logo">
                                <img src="../../assets/img/logo.png" alt="logo">
                            </a>
                        </div>
                        <div class="col-md-10 col-sm-8 nav-column clearfix">
                            <nav id="menu" class="d-none d-lg-block">
                                <ul>
                                    <li>@Html.ActionLink("Início", "Index", "Home")</li>
                                    <li>@Html.ActionLink("Acerca", "About", "Home")</li>
                                    <li>@Html.ActionLink("Contactos", "Contact", "Home")</li>
                                    @Html.Partial("_LoginPartial")
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </header>

            @RenderBody()

            <footer style="padding-bottom: 0px">
                <div class="footer-top">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-6 col-lg-3 footer_widget">
                                <div class="inner">
