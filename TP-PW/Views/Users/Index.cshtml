@model IEnumerable<TP_PW.Models.ApplicationUser>

@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="row">
       
        <div class="col-md-12 border border-white rounded" style="margin: 1rem; padding-top: 1rem">
            <h2>Utilizadores</h2>
            <hr />
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.UserName)
                    </th>
                    <th>
                        @Html.Raw("Nome")
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DataNascimento)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PhoneNumber)
                    </th>

                    <th>
                        <input type="button" class="btn btn-outline-secondary btn-sm" value="Adicionar Utilizador" onclick="location.href = '@Url.Action("Create", "Users")'" />
                    </th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PrimeiroNome)

                            @Html.DisplayFor(modelItem => item.Apelido)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DataNascimento)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PhoneNumber)
                        </td>

                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Roles", "RoleAddToUser", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })

                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>