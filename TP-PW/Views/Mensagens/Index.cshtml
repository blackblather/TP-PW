@model IEnumerable<TP_PW.Models.Mensagen>

@{
    ViewBag.Title = "Index";
}
<div class="container">
    <div class="row">

        <div class="col-md-12 border border-white rounded" style="margin: 1rem;">
            <h2>Index</h2>

            <p>
                @Html.ActionLink("Create New", "Create")
            </p>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Mensagem)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IdRemetente)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IdRecetor)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.HoraEnvio)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model) {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Mensagem)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IdRemetente)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IdRecetor)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.HoraEnvio)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>
