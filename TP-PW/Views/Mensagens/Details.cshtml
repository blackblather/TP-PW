@model TP_PW.Models.MensagenViewModel
@{
    ViewBag.Title = "Responder";
}

<h2>Create</h2>
<div class="contact-area sp">
    <div class="container">
        <div class="row">

            <div class="col-md-12" style="margin: 1rem; padding-top: 1rem;">
                

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            @Html.LabelFor(model => model.Remetente, htmlAttributes: new { @class = "control-label col-md-2" })
                            @Html.DisplayFor(model => model.Remetente, new { htmlAttributes = new { @class = "form-control disabled", Value = ViewBag.Recetor, ReadOnly = "readonly" } })
                            @Html.ValidationMessageFor(model => model.Remetente, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            @Html.LabelFor(model => model.Assunto, htmlAttributes: new { @class = "control-label col-md-2" })
                            @Html.DisplayFor(model => model.Assunto, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Assunto, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-row">

                        <div class="form-group col-md-12">
                            @Html.LabelFor(model => model.Mensagem, htmlAttributes: new { @class = "control-label col-md-2" })
                            @Html.DisplayFor(model => model.Mensagem, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Mensagem, "", new { @class = "text-danger" })

                        </div>
                        <div class="col-lg-12">
                            <button type="button" class="btn btn-outline-danger" onclick="location.href = '@Url.Action("Index", "Mensagens")'">Voltar</button>

                        </div>
                    </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

